*{
    margin:0;
    padding:0
}

.mrl5{
    margin-left:15px;
}
.ft18{
    font-size:18px;
}
.mar0{
    margin:0 !important;
}
.bdrr{
    border-right:1px solid #ccc;
}
.bdrl{
    border-left:1px solid #ccc;
}
.my__box{
    padding:0;
    margin-top:20px;
    height:600px;
   
    
    
    .my__left{
        border:1px solid #ccc;
       width:150px;
       
        .account{
            font-size:50px;
            margin-left:10px;
        }
        .left__txt{
            margin-top:20px;
            margin-bottom:10px;
           margin-right:15px;
            p{
                font-size:12px;
               
            }
            span{
                font-size:12px;
            }
        }
        nav{
            list-style:none;
            
            
            li{
            text-align:center;
              line-height: 60px;
              
              a{
                text-decoration:none;
                color:#333;
                font-weight: 600;
                span{
                    font-size:30px;
                    margin-right:15px;
                    padding:5px 0;
                    vertical-align: middle;
                }
              }
            }
        }
    }
    .my__right{
        border:1px solid #ccc;
        width:980px;
        position: relative;
        h3{ 
            margin-top:10px;
            font-size:16px;
            font-weight: 600;
            text-indent:2em;
            line-height: 45px;
            
            margin-bottom:0;
        }
        .img{
            width:200px;
            height:30px;
            background:url(../../images/quan3888.png) no-repeat;
            position: absolute;
            right:20px;
            top:10px;
        }
        .center__left{
            height:150px;
            border:1px solid #ccc;
            border-left:0;
            border-right:0;
            .left__left{
                width:40%;
                height:100%;
                border-right:1px solid #ccc;
                p{
                    display:inline-block;
                    margin-left:32px;
                    color:#aaa;
                    margin-top:38px;
                }
               .assets{
                   margin-left:40px;
                   color:#333;
                   font-size:18px;
               }
               .earnings{
                   margin-left:60px;
                   color:salmon;
                   font-size:18px;
               }
            }
            .left__right{
                display:flex;
                flex-direction:column;
                .right__top{
                    height:73px;
                    border-bottom:1px solid #ccc;
                    .text{
                        text-indent:2em; 
                        .balance{
                            margin-top:10px;
                            
                        }
                        .amount{
                            font-size:18px;
                            span{
                                margin-left:15px;
                                color:#aaa;
                                font-size:14px;
                            }
                        }
                        .freezing{
                            margin-left:130px;
                            margin-top:-43px;
                            
                        }
                        #blockedmoney{
                            margin-left:130px;
                            margin-top:-5px;
                            font-size:18px;
                        }
                    }
                    form{
                        line-height: 70px;
                        input{
                            margin-right:20px;
                            width:70px;
                        }
                        button{
                            margin-right:50px;
                            width:70px;
                        }
                    }
                }
                .right__bottom{
                    text-indent:2em;
                    
                   .ul__principal{
                       list-style:none;
                       li{
                           width:195px;
                           float: left;
                           
                           
                           p{
                               margin-top:20px;
                           }
                           
                       }
                       .ul__estimate{
                        border-left:1px solid #CCC; 
                     }
                     .ul__duein{
                        border-right:1px solid #CCC; 
                     }
                   }
                }
            }
        }
        .right__btm{
            height:200px;
            .mymessage{
                border-bottom:1px solid #CCC;
                ul{
                    list-style:none;
                    
                    li{
                        text-indent:2em;
                        line-height: 25px;
                    }
                }
            }
            h3{
                font-weight:600;
                border:0;
                margin-top:10px;
            }
            p{
                text-align:center;
                line-height: 30px;
            }
        }
    }
}