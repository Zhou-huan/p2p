@baseColor:#5b337b;
ul,li,body,ol,dl,p,h3{
    margin: 0;
    padding: 0;
}
ul{
    list-style: none;
}
//所有a标签过渡
a{
    &:hover{
        color: #f86965 !important;
        text-decoration: none;
    } 
}
// 顶部导航
.top-nav {
   border: 0;
   margin-bottom:0;
   .navfont{
       a{
        font-size: 20px;
      
       }
   }
}
.headerfix{
    height:160px;
    .header{
        position: fixed;
        z-index:1000;
        width: 100%;
    }
    // 内容导航
    .content-nav{
        background-color: #fff;
        border: 0;
        padding:10px 0;
        .leftline{
            border-left: 1px solid #ccc;
            padding-left: 30px;
            margin-top:20px;
            .red{
                color: #b33a5b;
                margin: 0;
            }
            .fstyle{
                font-family:'宋体';
                font-size:20px;
                color: #888;
            }
        }
       
        .cnav{
            font-size: 20px;
            a{
                color: #000 !important;
                padding-top:36px;
                &:hover{
                    color: #f86965 !important;
                }
            }
        }
    }
}
//中间主体内容
.logoinMain{
    height: 620px;
    background:#6e6fcf url('../../images/login-register-bg.png') no-repeat center 40px;
    //登录
    .forms{
        background-color: rgb(255, 255, 255);
        padding:40px;
        width: 400px;
        position: relative;
        left:860px;
        top: 80px;
        .circle{
            position: absolute;
            top:-50px;
            left: 134px;
            img{
                width: 140px;
            }
        }
        p{
            padding-left: 16px;
            height:54px;
            label.error{
                font-size: 12px;
                color: #f00;
            }
            #loginBut,#regBut{
               width: 120px;
               text-align: center;
               height:40px;
               font-size: 18px;
               color: #000;
            }
            #loginBut{
                color:tomato;
            }
            input{
                height:32px;
                margin-top: 30px;
                line-height:32px;
                padding-left: 40px;
                outline:none;
                width: 100%;
                border: 0;
                border-bottom:1px solid rgb(119, 129, 125);
                box-sizing: border-box;
                &:first-child{
                    background: url(../../images/people.png) no-repeat;
                }
                &:last-child{
                    background: url(../../images/lock.png) no-repeat;
                }
            }
            .formBut{
                width: 100%;
                height:40px;
                line-height: 30px;
                border:0;
                background-color:@baseColor;
                margin-top:50px;
                color: #fff;
                font-size: 18px;
                &:hover{
                    opacity: 0.8;
                }
            }
        }
        span{
            display: block;
            width: 100%;
            border-top:1px solid #AAAAAA;
            margin-top:60px;
            line-height: 54px;
            text-align: center;
        }  
    }
}
//尾部
.footer{
    padding: 40px 0 160px;
    text-align: center;
}