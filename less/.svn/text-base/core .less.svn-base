*{
    margin:0;
    padding:0;
}
ul{
	list-style: none;
}
a{
    color:#333;
    &:hover{
        text-decoration: none;   
    }
}
.pagination{
  margin-left:320px;
}
.core__box{

   
    .box__top{
        height:60px;
    }
    h4{
        float:left;
        padding-bottom:20px;
    
    }
    .box__form{
        float:left;
        position: relative;
        margin-left:30px;
       
        .form__text{
           width:300px;
           height:30px; 
           outline:0;
        }
        .form__btn{
            height:30px; 
            width:60px;
            position: absolute;
            right:0;
            top:0;
            background: #fb6862;
            
            border:0;
        }
    }
    .box__center{
        width:900px;
        
        ul{
            width:900px;
            display:flex;
            justify-content:space-between;
            flex-wrap:wrap;
            li{
                width:250px;
                margin-bottom:20px;
                border:1px solid #CCC;
               
                img{
                    width:248px;

                }
                p{
                    height:20px;
                    line-height:30px;
                    border-top:1px solid #CCC;
                    text-align: center;
                }
            }

        }
    }
}